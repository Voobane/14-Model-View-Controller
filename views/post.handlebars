<h1>{{post.title}}</h1>
<p>{{post.content}}</p>
<p>Posted by {{post.user.username}} on {{post.createdAt}}</p>

<h2>Comments</h2>
{{#each post.comments}}
  <div class="comment">
    <p>{{this.content}}</p>
    <p>Commented by {{this.user.username}} on {{this.createdAt}}</p>
  </div>
{{else}}
  <p>No comments yet. Be the first to comment!</p>
{{/each}}

{{#if logged_in}}
  <form class="comment-form" data-post-id="{{post.id}}">
    <textarea id="comment-content" placeholder="Add a comment" required></textarea>
    <button type="submit">Submit Comment</button>
  </form>
{{else}}
  <p>You need to <a href="/login">log in</a> to comment on this post.</p>
{{/if}}

<script src="/js/comment.js"></script>
