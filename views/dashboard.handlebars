<h1>Your Dashboard</h1>

<!-- Section for creating a new blog post -->
<h2>Create a New Post</h2>
<form class="new-post-form">
  <div>
    <label for="post-title">Title</label>
    <input type="text" id="post-title" name="title" placeholder="Enter post title" required>
  </div>
  <div>
    <label for="post-content">Content</label>
    <textarea id="post-content" name="content" placeholder="Enter your post content" required></textarea>
  </div>
  <button type="submit">Create Post</button>
</form>

<hr>

<!-- Section for displaying existing posts created by the user -->
<h2>Your Posts</h2>
{{#each posts}}
  <div class="post-item">
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <p><small>Posted on {{this.createdAt}}</small></p>
    <button data-id="{{this.id}}" class="edit-post-btn">Edit</button>
    <button data-id="{{this.id}}" class="delete-post-btn">Delete</button>
  </div>
  <hr>
{{else}}
  <p>You haven't created any posts yet.</p>
{{/each}}

<!-- Scripts for handling creating, updating, and deleting posts -->
<script src="/js/dashboard.js"></script>